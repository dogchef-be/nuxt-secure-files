{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "outDir": "dist",
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "lib"
    ]
}